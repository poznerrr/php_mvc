<main class="container">
    <div class="row gy-3">
        <?php
        if (!$this->posts) {
            echo "<p>Новостей пока нету.</p>";
        } else {
            foreach ($this->posts as $post) {
                echo "<div class='card center-block p-3'>";
                echo "<div class='card-body'>";
                echo "<h5 class='card-title'>" . htmlspecialchars($post->getTitle()) . "</h5>";
                echo "<div class='card-text'>" . htmlspecialchars($post->getText()) . "</div>";
                echo "<ul class='list group list-group-flush'>";
                echo "<li class='list-group-item'>Категория: " . htmlspecialchars($post->getCategory()) . "</li>";
                echo "<li class='list-group-item'>Автор: " . htmlspecialchars($post->getAuthor()) . "</li>";
                echo "<li class='list-group-item'>Дата: " . htmlspecialchars($post->getDate()) . "</li>";
                echo "</ul>";

                echo <<<_END
            <form action='' method='post'>
             <input type="hidden" name="delete" value="yes">
            <input type="hidden" name="id" value="{$post->getId()}">
            <input class="btn btn-primary" type="submit" value="Удалить новость">
            </form>
           _END;
                echo "</div></div>";
            }
        }
        ?>
    </div>
    <div class="row my-3 d-flex">
        <div class="d-flex">
            <p>Страница: </p>
            <?php
            for ($i = $this->paginatorPages['first']; $i <= $this->paginatorPages['last']; $i++) {
                if ($i === $this->pageNumber) {
                    echo "<span class='mx-2'>$i</span>";
                } else {
                    echo "<a class='link-primary mx-2 paginator-href' href='{$this->domain}/?controller=index&action=render&page=$i'>$i</a>";
                }
            }
            ?>
        </div>
    </div>
</main>


