<main class="container">
    <div class="row my-3">
        <?php if (!$this->posts) { ?>
            <p>Новостей пока нету.</p>
        <?php } else {
            foreach ($this->posts as $post) {
                ?>
                <div class='card center-block p-3 my-2'>
                    <div class='card-body'>
                        <h5 class='card-title text-center'><?= $post->getTitle() ?></h5>
                        <div
                            class='card-text'><?= mb_strimwidth((strip_tags($post->getText(), ['p', 'br'])), 0, 200, '...') ?></div>
                        <ul class='list group list-group-flush mt-3 h6'>
                            <li class='list-group-item'>
                                <b>Категория: </b><i><?= htmlspecialchars($post->getCategory()->getName()) ?> </i></li>
                            <li class='list-group-item'><b>Дата: </b><i><?= htmlspecialchars($post->getDate()) ?></i>
                            </li>
                        </ul>
                    </div>
                    <a class='btn btn-primary'
                       href='<?= $this->domain ?>/?controller=news&action=renderDefault&postId=<?= $post->getId() ?>'>Читать
                        полностью</a>
                </div>
                <?php
            }
        }
        ?>
    </div>
    <div class="row my-3 d-flex">
        <div class="d-flex">
            <p>Страница: </p>
            <?php
            for ($i = $this->paginatorPages['first']; $i <= $this->paginatorPages['last']; $i++) {
                if ($i === $this->pageNumber) {
                    ?>
                    <span class='mx-2'><?= $i ?></span>
                <?php } else { ?>
                    <a class='link-primary mx-2 paginator-href'
                       href='<?= $this->domain ?>/?controller=index&action=renderDefault&page=<?= $i ?>'><?= $i ?></a>
                    <?php
                }
            }
            ?>
        </div>
    </div>
</main>


